{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "C/C++: build active file (auto detect)",
      "type": "shell",
      "command": "${workspaceFolder}/.vscode/build.sh",
      "args": [
        "${file}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "detail": "Auto-detect C or C++ and compile."
    }
  ]
}
