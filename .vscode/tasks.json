{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build active file (C++17)",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-O2",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.out"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": "$gcc"
    },
    {
      "label": "Run active file",
      "type": "shell",
      "command": "${fileDirname}/${fileBasenameNoExtension}.out",
      "options": {
        "cwd": "${fileDirname}"
      }
    },
    {
      "label": "Build & Run active file",
      "dependsOn": [
        "Build active file (C++17)",
        "Run active file"
      ],
      "dependsOrder": "sequence",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
